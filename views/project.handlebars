<!doctype html>
<!-- placeholder for project viewing page -->

<html>
<head>
	<title>HCI Project</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/agenda.css" rel="stylesheet">
  <link href="/css/main.css" rel="stylesheet">
  <link href="/css/projects.css" rel="stylesheet"> 
  <link href="/css/fonts.css" rel="stylesheet">
	<!-- this is a comment in HTML -->

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
</head>

<body>
	<div class="container">
		{{>navbar}}

    <h3 class="page-header">
      {{pageName}}
      <!-- <a href="/projects/delete/{{id}}" class="header_edit">delete</a> -->
      <a href="/projects/edit/{{id}}" class="header_edit">edit</a>
      <a href="/create/{{id}}" class="header_edit">+task/meeting</a>
    </h3>


    <br/>

    <span class="type-title">tasks</span>
<!--     <a id="task-box-button" class="collapse-button">collapse</a> -->
    <div id="task-box">
      {{#each tasks}}
      <div class="todo-card task" id="task{{id}}">
        <span class="due_date">{{dueDate}}</span>
        <p class="task-name">{{name}}</p>
        <a class="detail-button">details &raquo;</a>
        <p class="progress_line no_margin" id="progress_line{{id}}">{{progress}}% complete</p>
        <div id="detailtask{{id}}" class="notes-field" style="display:none;">
          <span class="notes-title">notes</span>
          <p class="notes-text">{{notes}}</p>
          <span class="notes-title">checklist</span>
          <table class="subtask_table">
          {{#each subtasks}}
            <tr class="subtask_line" id="{{id}}">
              {{#if done}}
                <td><input type="checkbox" id="checkbox{{id}}" checked></td>
                <td id="subtask{{id}}" style="text-decoration: line-through">{{name}}</td>
                <td class="subtask_duration">[{{duration}} hours]</td>
            </tr>
              {{else}}
                <td><input type="checkbox" id="checkbox{{id}}"></td>
                <td id="subtask{{id}}">{{name}}</td>
                <td class="subtask_duration">[{{duration}} hours]</td>
            </tr>
            <tr>
                <td></td>
                <td class="subtask_member">waiting on {{members}}</td>
            </tr>
              {{/if}}
          {{/each}}
          </table>
          <a class="link-button" id="/edit/task/{{project_id}}/{{id}}">edit task</a>
        </div>
      </div>
      {{/each}}
    </div>

    <br>
    <span class="type-title">meetings</span>
<!--     <a id="meeting-box-button" class="collapse-button">collapse</a> -->
    <div id="meeting-box">
      {{#each meetings}}
      <div class="todo-card meeting" id="meeting{{id}}">
        <p class="task-name">{{name}}</p>
        <a class="detail-button">details &raquo;</a>
        <p class="duedate">{{datetime}}</p>
        <div id="detailmeeting{{id}}" class="notes-field" style="display:none;">
          <span class="notes-title">notes</span>
          <p class="notes-text">{{notes}}</p>
          <span class="notes-title">attendees</span>
          <p class="notes-text">{{members}}</p>
          <a class="link-button" id="/edit/meeting/{{project_id}}/{{id}}">edit</a>
        </div>
      </div>
      {{/each}}
    </div>

    <br>
    <span class="type-title">completed</span>
    <a id="completed-box-button" class="collapse-button">hide</a>
    <div id="completed-box">
      {{#each completed_tasks}}
      <div class="todo-card completed" id="task{{id}}">
        <span class="due_date">{{dueDate}}</span>
        <p class="task-name">{{name}}</p>
        <a class="detail-button">details &raquo;</a>
        <p class="progress_line no_margin" id="progress_line{{id}}">{{progress}}% complete</p>
        <div id="detailtask{{id}}" class="notes-field" style="display:none;">
          <span class="notes-title">notes</span>
          <p class="notes-text">{{notes}}</p>
          <span class="notes-title">subtasks</span>
          <table class="subtask_table">
          {{#each subtasks}}
            <tr class="subtask_line" id="{{id}}">
              <td><input type="checkbox" id="checkbox{{id}}" checked></td>
              <td id="subtask{{id}}" style="text-decoration: line-through">{{name}}</td>    
              <td class="subtask_duration">[{{duration}} hours]</td>
            </tr>
          {{/each}}
          </table>
          <a class="link-button" id="/edit/task/{{project_id}}/{{id}}">edit</a>
        </div>
      </div>
      {{/each}}
    </div>

    <br/>
    <!-- <a id="description-button" class="collapse-button">show</a> -->
    <span class="type-title">Project Info</span>
    <div id="project-description">
      <span class="notes-title">Description</span>
      <div class = "summary">{{description}}</div>
      <span class="notes-title">Members</span>
      <div class = "member">{{members}}</div>
    </div>
    
    <br/>
    <br/>

    {{#if task_id}}
    <div class="hidden_anchor" id="{{task_id}}"></div>
    {{/if}}
	</div>

	<!--<script src="https://code.jquery.com/jquery.js"></script>-->
  <script src="/js/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/projects.js"></script>
</body>
</html>